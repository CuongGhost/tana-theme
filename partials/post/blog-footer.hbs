<div class="lg:flex justify-between items-center gap-x-1.5 not-prose my-4 {{#if hide_mobile}}hidden{{/if}}">
    <div class="hidden h-[92px] lg:block py-4 {{#if invert}}order-last{{/if}}">
        <div class="text-green-700 dark:text-green-300">
            {{> post/clap-button}}
        </div>
        <p class="mt-1 text-xs text-center text-green-700 dark:text-green-300">{{t "Clap"}}</p>
    </div>
    {{!-- Share button --}}
    <div class="flex flex-row items-center justify-between w-full md:w-fit gap-x-4">
        {{^has tag="#changelog"}}
        {{#if tags}}
        <div class="{{#if invert}}order-last{{/if}} btn-share-dropdown text-black bg-gray-100 dark:bg-gray-100">
            {{ tags separator="" limit="1" }}
        </div>
        {{/if}}
        {{/has}}

        <div class="relative inline-flex hs-dropdown">
            <button type="button" class="hs-dropdown-toggle btn-share-dropdown">
                <svg viewBox="0 0 100 100" aria-hidden="true" class="w-4 h-4">
                    <use href="{{asset "cache/sprite.svg#share-icon"}}"></use>
                </svg>
                Share
            </button>

            <div class="hs-dropdown-menu w-56 transition-[opacity,margin] duration hs-dropdown-open:opacity-100 opacity-0 hidden mb-1 z-10 bg-white shadow-2xl rounded-xl p-2 dark:bg-lightblack"
                aria-labelledby="blog-article-share-dropdown">
                <a class="btn-share" onclick="window.open(this.href, 'twitter-share', 'width=550, height=235'); return false;"
                    href="https://twitter.com/share?text={{ encode title }}&amp;url={{ url absolute='true' }}">
                    <svg viewBox="0 0 100 100" aria-hidden="true" class="w-4 h-4">
                        <use href="{{asset "cache/sprite.svg#twitter-icon"}}"></use>
                    </svg>
                    Share on Twitter
                </a>
                <a class="btn-share" onclick="window.open(this.href, 'facebook-share', 'width=580, height=296'); return false;"
                    href="https://www.facebook.com/sharer/sharer.php?u={{ url absolute='true' }}">
                    <svg viewBox="0 0 100 100" aria-hidden="true" class="w-4 h-4">
                        <use href="{{asset "cache/sprite.svg#facebook-icon"}}"></use>
                    </svg>
                    Share on Facebook
                </a>
                <a class="btn-share" onclick="window.open(this.href, 'linkedin-share', 'width=580, height=296'); return false;"
                    href="https://www.linkedin.com/shareArticle?mini=true&url={{ url absolute='true' }}&title={{ encode title }}">
                    <svg viewBox="0 0 100 100" aria-hidden="true" class="w-4 h-4">
                        <use href="{{asset "cache/sprite.svg#linkedin-icon"}}"></use>
                    </svg>
                    Share on LinkedIn
                </a>
            </div>
        </div>
    </div>
    {{!-- Share button --}}
</div>