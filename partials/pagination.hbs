{{#match pages ">" 1}}
<nav class="flex justify-between text-sm text-neutral-500">
  <div>
    {{#if prev}}
      <a href="{{page_url prev}}" class="pa-3" aria-label="{{t "Newer posts"}}"><span aria-hidden="true">&larr;</span></a>
    {{else}}
      <span class="pa-3 text-neutral-300">&larr;</span>
    {{/if}}
  </div>
  <span>{{t "Page {page} of {pages}" page=page pages=pages}}</span>
  <div>
  {{#if next}}
    <a href="{{page_url next}}" class="pa-3" aria-label="{{t "Older posts"}}"><span aria-hidden="true">&rarr;</span></a>
    {{else}}
    <span class="pa-3 text-neutral-300">&rarr;</span>
  {{/if}}
  </div>
</nav>
{{/match}}
