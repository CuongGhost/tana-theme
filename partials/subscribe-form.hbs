<p>Join {{total_members}} members</p>
<form class="subscribe-form" data-members-form="subscribe">
    {{!-- <input type="text" class="subscribe-email" data-members-name placeholder="Your name" autocomplete="false" required> --}}
    <input type="email" class="px-5 py-2 rounded-lg" data-members-email placeholder="your@email.com" autocomplete="false" required>
    <button class="button primary" type="submit">
      <span class="button-content">{{#if button_text}}{{button_text}}{{else}}{{t "Subscribe"}}{{/if}}</span>
      <span class="button-loader">
        <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" width="24" height="24" viewBox="0 0 40 40">
          <path d="M20.201 5.169c-8.254 0-14.946 6.692-14.946 14.946 0 8.255 6.692 14.946 14.946 14.946s14.946-6.691 14.946-14.946c-.001-8.254-6.692-14.946-14.946-14.946zm0 26.58c-6.425 0-11.634-5.208-11.634-11.634 0-6.425 5.209-11.634 11.634-11.634 6.425 0 11.633 5.209 11.633 11.634 0 6.426-5.208 11.634-11.633 11.634z" opacity=".2"/>
          <path d="M13.39 10.433 11.455 7.75a14.855 14.855 0 0 0-4.898 5.983l3.02 1.36a11.57 11.57 0 0 1 3.813-4.659z">
            <animateTransform attributeName="transform" attributeType="xml" dur="0.5s" from="0 20 20" repeatCount="indefinite" to="360 20 20" type="rotate"/>
          </path>
        </svg>
      </span>
    </button>
    <div class="message-success">
      {{{t "<strong>Welcome!</strong> You will soon receive an email. Please click the log in link to confirm your subscription."}}}
    </div>
    <div class="message-error" data-members-error>
      {{!-- Default content that will be replaced with a specific error message by Ghost --}}
      {{t "Sorry, something went wrong. Please try again."}}
    </div>
</form>