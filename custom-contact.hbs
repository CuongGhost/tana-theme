{{!< default}} {{#post}} <main class="max-w-7xl mb-16 sm:my-16 px-4 sm:px-6 lg:px-8 mx-auto min-h-[680px]">
    <div class="prose lg:col-span-2 sm:prose-lg prose-a:no-underline dark:prose-invert max-w-none typo">
        <article class="{{post_class}}">
            <div class="mx-auto">
                <div class="grid gap-6 mt-6 lg:grid-cols-2 lg:gap-16">
                    <div>
                        <header>
                            <div class="my-0">
                                {{> site-wide/breadcrumbs}}
                            </div>
                            <h1 class="text-2xl font-extrabold sm:text-3xl lg:text-4xl">{{title}}</h1>
                            <div class="mb-6 border-b">
                                {{#if custom_excerpt}}
                                <p class="prose-lg sm:prose-xl">{{custom_excerpt}}</p>
                                {{/if}}
                            </div>
                        </header>
                        {{content}}
                    </div>
                    <div
                        class="flex flex-col p-4 bg-white border h-fit dark:bg-black not-prose gap-y-2 rounded-xl sm:p-6 lg:p-8 dark:border-gray-700">
                        <h2 class="py-6 text-2xl font-extrabold text-black dark:text-white">
                            {{t "Fill in the form"}}
                        </h2>
                        {{!-- Formspark --}}
                        <form action="{{ @custom.contact_form }}">
                            <div class="grid gap-4">
                                <div class="grid grid-cols-1 gap-4">
                                    <div>
                                        <label for="Name" class="sr-only">{{t "Name"}}</label>
                                        <input type="text" name="{{t "Name"}}" id="hs-firstname-contacts-1"
                                            class="block w-full px-4 py-3 text-sm border-gray-200 rounded-md focus:border-blue-500 focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400"
                                            placeholder="{{t " Name"}}">
                                    </div>

                                    <div>
                                        <label for="email" class="sr-only">Email</label>
                                        <input type="text" name="email" id="hs-email-contacts-1"
                                            autocomplete="email"
                                            class="block w-full px-4 py-3 text-sm border-gray-200 rounded-md focus:border-blue-500 focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400"
                                            placeholder="Email">
                                    </div>

                                    <div>
                                        <label for="Message" class="sr-only">{{t "Message"}}</label>
                                        <textarea id="hs-about-contacts-1" name="{{t "Message"}}" rows="4"
                                            class="block w-full px-4 py-3 text-sm border-gray-200 rounded-md focus:border-blue-500 focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400"
                                            placeholder="{{t " Message"}}"></textarea>
                                    </div>
                                </div>

                                <div class="grid mt-4">
                                    <button type="submit" class="btn">
                                        {{t "Send Message"}}
                                    </button>
                                </div>

                                <div class="mt-1 text-center">
                                    <p class="text-sm text-gray-500">
                                        {{t "We will get back to you in 1-2 business days."}}
                                    </p>
                                </div>
                        </form>
                        {{!-- End Formspark --}}
                    </div>
                </div>
            </div>
        </article>
    </div>
    </div>
    </main>

    {{> site-wide/language}}

    {{/post}}

{{#contentFor "custom_ghost_head"}}
<link rel="stylesheet" href="{{asset 'custom.css'}}">
{{/contentFor}}