{{!< default}}

<main class="frame">

  {{#post}}
  <header>
    <h1 class="text-3xl font-semibold">{{title}}</h1>
    {{content}}
  </header>

  {{> site-wide/language}}

  {{/post}}

  {{#get "authors" limit="all" include="count.posts" order="count.posts desc, name asc"}}
  {{#foreach authors}}
  <article>
    <h1><a href="{{url}}" title="{{t 'All posts by {author}' author=name}}">{{name}}</a></h1>
    {{#if bio}}<p>{{bio}}</p>{{/if}}
    <p>{{plural count.posts empty=(t "0 posts") singular=(t "1 post") plural=(t "% posts")}}</p>
  </article>
  {{/foreach}}
  {{/get}}

</main>

{{#contentFor "custom_ghost_head"}}
<link rel="stylesheet" href="{{asset 'custom.css'}}">
{{/contentFor}}